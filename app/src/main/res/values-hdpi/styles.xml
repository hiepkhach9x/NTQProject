<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="text_view_panel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sd_text_size_micro</item>
    </style>

    <style name="andG_meetpeople_txt_name" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="edit_text_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_horizontal_item_height</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">@dimen/sd_text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="content_item_edit_text_list_group_item" parent="@style/edit_text_standard">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textColor">#435691</item>
    </style>

    <style name="text_type_sliding_menu_right_item_notification">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/undread_message_text_size_micro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:lines">1</item>
    </style>

    <style name="text_view_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_horizontal_item_height</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/sd_text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="button_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_horizontal_item_height</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sd_text_size_medium</item>
    </style>

    <style name="button_horizontal" parent="@style/button_standard">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="button_invite" parent="button_standard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/sd_horizontal_item_height_xmicro</item>
        <item name="android:paddingLeft">@dimen/sd_hori_space_medium</item>
        <item name="android:paddingRight">@dimen/sd_hori_space_medium</item>
        <item name="android:background">@drawable/btn_invite_background</item>
        <item name="android:layout_marginRight">@dimen/invite_button_margin</item>
        <item name="android:text">@string/add_friends_invite_button_title</item>
        <item name="android:textColor">@color/text_title_btn_invite</item>
    </style>

    <style name="content_item_list_group_item" parent="@style/text_view_standard">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">#435691</item>
    </style>

    <style name="content_item_list_group_item_secondary" parent="@style/text_view_standard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>
