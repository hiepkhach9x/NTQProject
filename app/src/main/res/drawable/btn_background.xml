<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke 
                android:width="1dp" 
                android:color="@color/border_nomal" />

            <gradient 
                android:angle="270" 
                android:endColor="@color/btn_base_press_end" 
                android:centerColor="@color/btn_base_press_center" 
                android:startColor="@color/btn_base_press_start" />

            <corners 
                android:radius="@dimen/sd_radius_small" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke 
                android:width="1dp" 
                android:color="@color/border_nomal" />

            <gradient 
                android:angle="270" 
                android:endColor="@color/btn_base_end" 
                android:centerColor="@color/btn_base_center" 
                android:startColor="@color/btn_base_start" />

            <corners 
                android:radius="@dimen/sd_radius_small" />
        </shape>
	</item>
</selector>